#ifndef QueueH
#define QueueH

struct Node
{
	int x;
    Node *Next, *Prev;
};

class Queue
{
	Node *Head, *Tail;
	public:
	Queue() : Head(NULL), Tail(NULL){}  //конструктор
	~Queue();                           //деструктор (очистка очереди)
	void Show(TMemo*);						//просмотр
	void Add(int);						//добавление элемента в конец
	void Delete();					    //удаление элемента из начала
	bool IsEmpty(Node*);				//проверка на пустоту
};


#endif
